<div class="jc">
  <% project.team_memberships.each do |membership| %>
    <% if membership.user.first_name %>
      <% if delete %>
        <% unless ['client','lead'].include?(membership.relation) %>
          <%= link_to team_membership_url(membership), method: :delete, data: { confirm: "Are you sure you want to remove #{membership.user.first_name}" } do %>
            <div class="avatar-sm <%= membership.relation %>" title='<%= "Remove #{membership.user.full_name}? ðŸ˜¥" %>' style="background-image: url('<%= membership.user.photo.attached? ? url_for(membership.user.photo) : asset_path('user.png') %>')" ></div>
          <% end %>
        <% end %>
      <% else %>
        <div class="avatar-sm <%= membership.relation %>" title='<%= "#{membership.user.full_name} - #{membership.pretty_relation}" %>' style="background-image: url('<%= membership.user.photo.attached? ? url_for(membership.user.photo) : asset_path('user.png') %>')" ></div>
      <% end %>
    <% end %>
  <% end %>
  <% unless delete || hide_add %>
    <%= link_to project_team_memberships_path(project), class: "line-link member-link" do %>
      <div class="fas fa-plus blue"></div>
    <% end %>
  <% end %>
</div>
