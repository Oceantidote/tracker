<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <% if user_signed_in? %>
    <%= render "shared/lhs_nav" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <div class="avatar-sm jar no-z navbar-avatar dropdown-toggle" title='<%= "#{current_user.full_name}" %>' style="background-image: url('<%= current_user.photo.attached? ? url_for(current_user.photo) : "" %>'); background-color: <%= current_user.color %>" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <p class="text-center bold m-0"><%= current_user.initials if !current_user.photo.attached? %></p>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
