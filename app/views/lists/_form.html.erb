
<%= simple_form_for [@project, @list] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Let's give this list a name" %>
    <%= f.input :description, placeholder: "Perhaps a brief description too..." %>
    <% if action_name == "new" %>
      <%= f.input :payment_type, label: "List type", as: :radio_buttons, collection: Project.payment_types[1..4], label_method: :second, value_method: :first %>
    <% else %>
      <p class="mb-4"><strong>List type</strong> cannot be changed after it has been created</p>
    <% end %>

  </div>



  <div class="jc">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
