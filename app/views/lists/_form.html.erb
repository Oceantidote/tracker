
<%= simple_form_for [@project, List.new] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Let's give this project a name" %>
    <%= f.input :description, placeholder: "Perhaps a brief description too..." %>
    <%= f.input :payment_type, as: :radio_buttons, collection: Project.payment_types[1..4], label_method: :second, value_method: :first %>

  </div>



  <div class="jc">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
