

<div class="container flex">
  <div class="row" style="width: 100%">
    <div class="col-sm-12 col-md-8 offset-md-2 offset-lg-3 col-lg-6">
      <div class="jc">
        <%= image_tag "HoxtonDigital.png", alt: "Hoxton Digital Logo", class: "brand-logo" %>
      </div>
      <!-- <h5 class="text-center">👩‍💻 Welcome to Tracker. Sign up to create a free account and start your digital transformation 💻</h5> -->
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "first name", placeholder: "What is your first name?" } %>
          <%= f.input :last_name,
                     required: true,
                     autofocus: true,
                     label: false,
                     input_html: { autocomplete: "last name", placeholder: "Your last name?" } %>
          <%= f.input :company,
                     required: false,
                     autofocus: true,
                     label: false,
                     input_html: { autocomplete: "company", placeholder: "Tha name of your company" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "Email", placeholder: "Your email address" } %>
          <%= f.input :password,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "password", placeholder: "password" } %>
          <%= f.input :source,
                      required: true,
                      label: false,
                      collection: User::SOURCES,
                      prompt: "Where did you hear about us?" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="jc">
          <%= f.button :submit, "Sign Up", class: 'btn btn-primary wide-btn mt-2' %>
        </div>
        <div class="jcol mt-4">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

