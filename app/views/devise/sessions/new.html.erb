<div class="container" >
  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 offset-lg-3 col-lg-6">
      <div class="jc">
        <%= image_tag "HoxtonDigital.png", alt: "Hoxton Digital Logo", class: "brand-logo" %>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="jc">
          <%= f.button :submit, "Log In", class: 'btn btn-primary wide-btn mt-2' %>
        </div>
        <div class="jcol mt-4">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
